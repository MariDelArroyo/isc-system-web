pipeline {
    agent any
    tools {
        nodejs 'node_mariana'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch:'qa', url: 'https://github.com/MariDelArroyo/isc-system-web.git'
            }
        }
        stage('Instalar dependencias para cypress') {
            steps {
                sh 'npm install -g yarn'
                sh 'yarn install'
            }
        }
        stage('Install Cypress') {
            steps {
                sh 'yarn add cypress --dev'
            }
        }
        stage('Run e2e Tests') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
}