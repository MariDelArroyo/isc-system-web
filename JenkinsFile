pipeline {
    agent any
    tools {
        nodejs '20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/ZeinTonconi/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run cypress:run'
            }
        }
    }
}